# Ambiente
NODE_ENV=development
PORT=3000

# Base de Datos MongoDB
# Para Docker Compose usar: mongodb://mongodb:27017/gordont
# Para local usar: mongodb://localhost:27017/gordont
MONGODB_URI=mongodb://mongodb:27017/gordont

# Redis Cache
# Para Docker Compose usar: redis://redis:6379
# Para local usar: redis://localhost:6379
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# JWT Secrets (IMPORTANTE: Generar secretos seguros para producción)
# Para generar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu-secret-super-seguro-minimo-64-caracteres-aqui-cambiar-en-produccion
REFRESH_TOKEN_SECRET=otro-secret-diferente-tambien-de-64-caracteres-cambiar-en-produccion

# CORS
CORS_ORIGIN=*

# Swagger (documentación API)
SWAGGER_ENABLED=true
